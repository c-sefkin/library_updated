<h1><%= @author.name() %></h1>

<h3>Select all books that this author wrote:</h3>

<% if @books.any?() %>
  <form action="/authors/<%= @author.id %>" method="post">
    <input type="hidden" name="_method" value="patch">

    <% @books.each() do |book| %>
      <div class="checkbox">
        <label>
          <input type="checkbox" name="book_ids[]" value="<%= book.id() %>"><%= book.name() %>
        </label>
      </div>
    <% end %>
    <button type="submit">Add books</button>
  </form>
<% end %>



<% if @author.books().any?() %>
<h3>Here are all the books this author wrote:</h3>

  <% @author.books().each() do |book| %>
  <div class = "checkbox">
    <label>
      <input type="checkbox" name="book_ids[]" value="<%= book.id() %>"><%= book.name() %>
    </label>
  </div>
<% end %>
<form action="/authors/<%= @author.id() %>" method="post">
  <input name ="_method" type ="hidden" value="delete">
<button type="delete">Remove books</button>
<% else %>
<p>There are no books yet!</p>
<% end %>









